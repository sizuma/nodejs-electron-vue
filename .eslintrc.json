{
    "extends": ["eslint:recommended"],
    "plugins": [],
    "parserOptions": {},
    "env": {
        "node": true,
        "es6": true
    },
    "globals": {},
    "rules": {
        "no-console": "warn",
        "semi": "error",
        "prefer-const": "error",
        "indent": [
            "error",
            4
        ]
    },
    "overrides": [
        {
            "files": ["public/javascript/*.js"],
            "env": {
                "node": false,
                "browser": true
            }
        },
        {
            "files": ["server/index.js"],
            "rules": {
                "no-console": "off"
            }
        },
        {
            "files": ["public/javascript/*.js"],
            "rules": {
                "no-undef": [
                    "off",
                    "Vue"
                ]
            }
        }
    ]
}